<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/GridLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="11"
    android:orientation="horizontal" >

    <Space
        android:layout_column="10"
        android:layout_gravity="fill_vertical"
        android:layout_row="5" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_gravity="fill_horizontal|top"
        android:text="@string/INFORMATION"
        android:textSize="45sp"
        android:textColor="#00ccff" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_column="2"
        android:layout_gravity="left|top"
        android:layout_row="10"
        android:contentDescription="@string/download"
        android:src="@drawable/download" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_column="2"
        android:layout_gravity="left|top"
        android:layout_row="13"
        android:contentDescription="@string/flip"
        android:src="@drawable/flip" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_column="2"
        android:layout_gravity="left|top"
        android:layout_row="15"
        android:contentDescription="@string/snap"
        android:src="@drawable/snap" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_column="2"
        android:layout_gravity="left|top"
        android:layout_row="20"
        android:contentDescription="@string/uploadupload"
        android:src="@drawable/upload" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_gravity="left|top"
        android:layout_row="22"
        android:contentDescription="@string/info"
        android:src="@drawable/info" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="205dp"
        android:layout_column="2"
        android:layout_gravity="center_horizontal|top"
        android:layout_row="13"
        android:text="@string/flipstatement"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#00ccff" />

    <TextView
        android:id="@+id/textView4"
        android:layout_column="2"
        android:layout_gravity="center"
        android:layout_row="22"
        android:text="@string/infostatement"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#00ccff" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="190dp"
        android:layout_column="2"
        android:layout_gravity="center_horizontal|top"
        android:layout_row="20"
        android:text="@string/uploadstatement"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#00ccff" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="237dp"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_gravity="center"
        android:layout_row="10"
        android:text="@string/Downloadstatement"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#00ccff" />

    <TextView
        android:id="@+id/textView3"
        android:layout_column="2"
        android:layout_gravity="center"
        android:layout_row="15"
        android:text="@string/takepicstatement"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#00ccff" />

</GridLayout>